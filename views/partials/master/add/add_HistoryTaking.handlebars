<br/><div class="card-panel purple darken-3 white-text" style="padding:5px; font-size: 20px">History Taking</div>
<div style="overflow-x:auto; max-height: 16em;">
<table id="fallRecords" class="hover order-column">
    <thead>
        <tr>
            <th>Chief Complain</th>
            <th>History of Present Illness</th>
            <th>Allergy status</th>
            <th>Medical History</th>
            <th>Surgical History</th>
            <th>Family History</th>
            <th>Social History</th>
            <th>Travel History</th>
            {{!-- <th>Patient ID</th> --}}
            {{#unless userType}}
            <th>Delete</th>
            {{/unless}}
        </tr>
    </thead>

    <tbody>
        {{#if newFall}}
            {{#each newFall}}
            <tr style="height: 60px">
                {{#unless ../userType}}
                <td><a href="/master/fall/{{fallID}}">{{datetime}}</a></td>
                {{else}}
                <td><a href="/student/fall/{{../recordID}}/{{fallID}}">{{datetime}}</a></td>
                {{/unless}}
                <td>{{history}}</td>
                <td>{{secondary}}</td>
                <td>{{ambu}}</td>
                <td>{{ivhl}}</td>
                <td>{{gait}}</td>
                <td>{{mental}}</td>
                <td>{{totalmf}}</td>
                {{!-- <td>{{patientID}}</td> --}}
                {{#unless ../userType}}
                <td style="width: 55px"> <!-- the tr we're trying to get -->
					<form action="/master/del-fall/{{fallID}}?_method=DELETE" method="post" id="delete-form">
						<input type="hidden" name="_method" value="DELETE">
						<button type="submit" class="btn red darken-3">
							<i class="material-icons">delete</i>
						</button>
					</form>
				</td>
                {{/unless}}
            </tr>
            {{/each}}
        {{else}}
        <p id="noRecord">You have not created any History Taking records yet</p>
        {{/if}}
    </tbody>

</table>
</div>
<br>

{{#if editFall}}
{{#unless userType}}
<form action="/master/edit-fall/{{editFall.fallID}}?_method=PUT" method="POST" id="editFall">
